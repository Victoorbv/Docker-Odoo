
                // Simplified color-contrast function to replicate bootstrap in report preview.
                @function preview-color-contrast($background) {
                    @if (lightness($background) > 50) {
                        @return black;
                    } @else {
                        @return white;
                    }
                }

                .o_company_1_layout {
                    font-family: Lato;

                    h2 {
                        color: #596141;
                    }

                    #informations strong {
                        color: #afa18c;
                    }

                    .o_total strong {
                        color: #596141;
                    }

                    .o_company_tagline {
                        color: #596141
                    }
                &.o_report_layout_bubble {
                    #informations {
                        border-color: #afa18c;
                        background-color: mix(white, #afa18c, 92%);
                    }

                    thead th, #total .o_total td {
                        background-color: #596141;
                        color: preview-color-contrast(#596141);

                        strong {
                            color: preview-color-contrast(#596141);
                        }
                    }
                }
            }